# ==============================================
# Variables de Entorno para Docker Hub
# Water Distribution Microservice
# ==============================================

# Configuración de MongoDB (usar MongoDB Atlas en producción)
MONGO_USERNAME=your_mongo_username
MONGO_PASSWORD=your_mongo_password
MONGO_DATABASE=water_distribution_prod

# Configuración de Spring
SPRING_PROFILES_ACTIVE=prod

# API Externa
MS_USERS_BASE_URL=https://lab.vallegrande.edu.pe/jass/ms-users

# Configuración del servidor
SERVER_PORT=8086

# Configuración JVM para producción
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseContainerSupport

# Docker Hub
DOCKER_USERNAME=victorcuaresmadev
IMAGE_NAME=vg-ms-distribution
IMAGE_TAG=latest

# Configuración de red
NETWORK_NAME=water-distribution-prod

# Logs
LOG_LEVEL=INFO

# Configuración de salud y monitoreo
HEALTH_CHECK_INTERVAL=60s
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_RETRIES=5